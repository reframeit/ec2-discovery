#!/usr/bin/env ruby
require 'rubygems'

$:.push File.join(File.dirname(__FILE__), '..', 'lib')
require 'ec2-discovery'

# For running from the commandline
if ARGV.length != 2
  STDERR.puts "Usage: #{$0} <aws_access_key_id> <aws_secret_access_key>"
  exit 1
end

